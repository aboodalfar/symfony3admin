<script> 
    function js_call(is_ajax){
        $("ul#form_steps > li").removeClass("is_active");
        $('ul#form_steps > li:nth-child(3)').addClass('is_active');
        $('ul#form_steps > li:nth-child(2),ul#form_steps > li:nth-child(1)').addClass('completed');
