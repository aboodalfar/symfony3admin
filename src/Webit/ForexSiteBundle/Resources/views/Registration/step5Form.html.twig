<script> 
    function js_call(is_ajax){
        $("ul#form_steps > li").removeClass("is_active");
        $('ul#form_steps > li:nth-child(5)').addClass('is_active');
        $('ul#form_steps > li:nth-child(4),ul#form_steps > li:nth-child(3),ul#form_steps > li:nth-child(2),ul#form_steps > li:nth-child(1)').addClass('completed');
        if(is_ajax){
            $('button[type="submit"]').prop("disabled", false);
            history.pushState(null, null, "{{path('realRegistration',{'step':5})}}");
        }
    }
</script>
