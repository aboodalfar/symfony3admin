{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserLog list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Modifieruserid</th>
                <th>Subject</th>
                <th>Body</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userlog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userId }}</td>
                <td>{{ entity.modifierUserId }}</td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userlog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
